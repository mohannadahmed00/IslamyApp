<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/colorBlueBlack</item>

    </style>
    <style name="HomeBg">
        <item name="android:background">@drawable/dark_bg</item>
    </style>
    <style name="BottomNavStyle">
        <item name="android:background">@color/colorBlueBlack</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconSize">42dp</item>
        <item name="itemIconTint">@color/dark_bottom_nav_selector</item>
        <item name="itemTextColor">@color/dark_bottom_nav_selector</item>
        <item name="itemRippleColor">@null</item>
    </style>
    <style name="TextStyleOne">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="TextStyleTwo">
        <item name="android:textColor">@color/colorGold</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:backgroundTint">@color/colorGold</item>
    </style>
    <style name="ButtonStyleTwo">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorBlueBlack</item>
    </style>
    <style name="ItemStyle">
        <item name="tint">@color/colorGold</item>
    </style>
    <style name="ArrowStyle">
        <item name="tint">@color/colorWhite</item>
    </style>
    <style name="ViewStyle">
        <item name="android:background">@color/colorGold</item>
    </style>
    <style name="ImageStyle">
        <item name="android:src">@drawable/dark_sebha</item>
    </style>
    <style name="RecyclerStyle">
        <item name="android:backgroundTint">@color/colorBlueBlack</item>
    </style>
</resources>